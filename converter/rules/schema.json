{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://confluence-md.local/rule-file.schema.json",
  "title": "Regex Rule File",
  "oneOf": [
    { "$ref": "#/$defs/rule" },
    {
      "type": "array",
      "items": { "$ref": "#/$defs/rule" },
      "minItems": 1
    },
    {
      "type": "object",
      "additionalProperties": false,
      "required": ["rules"],
      "properties": {
        "rules": {
          "type": "array",
          "items": { "$ref": "#/$defs/rule" },
          "minItems": 1
        }
      }
    }
  ],
  "$defs": {
    "rule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "description", "pattern", "replacement"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "pattern": { "type": "string", "minLength": 1 },
        "replacement": { "type": "string" },
        "flags": { "type": "string" },
        "enabled": { "type": "boolean" }
      }
    }
  }
}
